<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/common_widget_btn_bg_b3_2">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:textColor="@color/common_textColor"
            android:textSize="18sp"
            tools:text="刘德华" />

        <LinearLayout
            android:id="@+id/lay_user_item_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_user_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话："
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_phone1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    tools:text="18232311564" />

                <TextView
                    android:id="@+id/tv_user_phone2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    tools:text="1823231122334" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_user_item_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/lay_user_item_phone"
            android:layout_below="@id/lay_user_item_phone"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="座机："

                android:textColor="#747474"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_user_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#747474"
                android:textSize="16sp"
                tools:text="0371-32356654" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_user_item_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/lay_user_item_tel"
            android:layout_below="@id/lay_user_item_tel"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱："
                android:textColor="#747474"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#747474"
                android:textSize="16sp"
                tools:text="xxxxxx" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_user_item_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/lay_user_item_email"
            android:layout_below="@id/lay_user_item_email"
            android:layout_marginTop="13dp"

            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="职务："
                android:textColor="#747474"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_user_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#747474"
                tools:text="工作" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_user_item_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/lay_user_item_job"
            android:layout_below="@id/lay_user_item_job"
            android:layout_marginTop="13dp"

            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="机构："
                android:textColor="#747474"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_user_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#747474"
                tools:text="0371-32356654" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_user_item_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/lay_user_item_company"

            android:layout_below="@id/lay_user_item_company"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单位："
                android:textColor="#747474"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_user_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#747474"
                tools:text="0371-32356654" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay_user_item_department"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_call_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_user_call" />

            <ImageView
                android:id="@+id/iv_message_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="76dp"
                android:src="@drawable/ic_user_message" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_user_avatar"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_centerHorizontal="true"
        tools:src="@drawable/ic_avatar" />
</RelativeLayout>