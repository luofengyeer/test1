<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <com.cmcc.internalcontact.utils.view.CommonToolBar
        android:id="@+id/tb_login"
        app:leftFirstIconIsShown="false"
        style="@style/common_toolbar_normal"
        app:titleText="@string/text_login" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_phone_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@android:drawable/stat_sys_phone_call_forward" />

        <EditText
            android:id="@+id/ed_login_account"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_toEndOf="@id/iv_phone_icon"
            android:hint="请输入11位手机号码" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_pwd_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_lock_lock" />

        <ImageView
            android:id="@+id/iv_pwd_eye_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:inputType="textPassword"
            android:src="@android:drawable/ic_lock_lock" />

        <EditText
            android:id="@+id/ed_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_toEndOf="@id/iv_pwd_icon"
            android:layout_toStartOf="@id/iv_pwd_eye_icon"
            android:hint="请输入6-20位密码" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lay_auto_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/sw_auto_login"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:clickable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动登录" />
    </LinearLayout>

    <com.cmcc.internalcontact.utils.view.CommonButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/common_theme_color"
        android:gravity="center"
        android:text="@string/text_login"
        android:textColor="#fff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fast_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="手机号快捷登录" />

        <TextView
            android:id="@+id/tv_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="忘记密码" />
    </LinearLayout>
</LinearLayout>