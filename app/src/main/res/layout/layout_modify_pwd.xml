<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.cmcc.internalcontact.utils.view.CommonToolBar
        android:id="@+id/toolbar_modify_pwd"
        style="@style/common_toolbar_normal"
        android:layout_alignParentTop="true"
        app:leftFirstIconIsShown="true"
        app:titleText="@string/modify_pwd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_modify_pwd"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="旧  密  码："
                android:textColor="@color/common_textColor"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ed_old_pwd"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:paddingEnd="16dp"

            android:paddingStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="新  密  码："
                android:textColor="@color/common_textColor"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ed_new_pwd"
                android:layout_width="match_parent"
                android:inputType="textPassword"

                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:paddingEnd="16dp"

            android:paddingStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="确认密码："
                android:textColor="@color/common_textColor"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ed_re_new_pwd"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:layout_height="match_parent" />
        </LinearLayout>

        <com.cmcc.internalcontact.utils.view.CommonButton
            android:id="@+id/btn_modify_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:background="@color/common_theme_color"
            android:gravity="center"
            android:text="修改密码"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>