<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_widget_btn_bg_b3_2"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp">

    <LinearLayout
        android:id="@+id/lay_switch_phone1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="呼叫："
            android:textColor="#747474"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_switch_phone1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#747474"
            android:textSize="24sp"
            tools:text="0371-32356654" />
    </LinearLayout>

    <View
        android:id="@+id/view_switch_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/common_divider_color" />

    <LinearLayout
        android:id="@+id/lay_user_item_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/lay_user_item_phone"
        android:layout_below="@id/lay_user_item_phone"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="呼叫："
            android:textColor="#747474"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_switch_phone2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#747474"
            android:textSize="24sp"
            tools:text="0371-32356654" />
    </LinearLayout>


</LinearLayout>